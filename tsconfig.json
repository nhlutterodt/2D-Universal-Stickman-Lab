{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["apps/**/*", "packages/**/*", "scripts/**/*", "math/**/*", "skeleton/**/*", "ik/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "cli/**/*"
  ]
}
