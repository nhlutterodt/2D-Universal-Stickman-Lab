{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["apps/**/*", "packages/**/*", "cli/**/*", "scripts/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "cli/*.ts",
    "apps/authoring-ui/src/tool-palette.ts"
  ]
}
